<Window x:Class="TravelAgency2018.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency2018"
        mc:Ignorable="d"
        Title="Туристическое агенство 2018"
        WindowStartupLocation="CenterScreen"
        Height="650" Width="1000"
        MinHeight="650" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="#878787">
            <Image
                Source="Resources/Logo.png"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="5"/>
            <TextBlock 
                Name="SloganTextBlock"
                FontFamily="Comic Sans MS" 
                FontSize="20"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="10"/>
        </Grid>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
