<Window x:Class="TravelAgency2018.View.Windows.LoadingScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency2018.View.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Loaded="LoadingScreenWindowOnLoaded"
        Height="225"
        Width="400">
    <Grid
        Background="#878787">
        <Image
            Source="../../Resources/Assets/Logo.png"
            Height="100"
            VerticalAlignment="Top"
            Margin="20,20"
            HorizontalAlignment="Left" />
        <TextBlock
            Name="SloganTextBlock"
            Text="data template"
            FontSize="20"
            Margin="60,0,0,30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center" />
        <ProgressBar
            Height="25"
            Width="400"
            IsIndeterminate="True"
            VerticalAlignment="Bottom" />
    </Grid>
</Window>
